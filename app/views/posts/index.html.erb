<h1>All Posts</h1>
<table>
  <tr>
    <th>投稿内容</th>
    <th>ユーザー名</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.user.name %></td>

    <% if logged_in? && current_user.id == post.user_id %>
      <td><%= link_to '詳細', post_path(post.id), class:"btn btn-secondary" %></td>
      <td><%= link_to "編集", edit_post_path(post.id), class:"btn btn-secondary" %></td>
      <td><%= link_to '削除', post_path(post.id), class:"btn btn-secondary", method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    <% else%>
      <td><%= link_to '詳細', post_path(post.id), class:"btn btn-secondary" %></td>
    <% end %>
    
  </tr>
<% end %>

</table>
<br>
<%= link_to '新しく投稿する', new_post_path, class:"btn btn-primary" %>